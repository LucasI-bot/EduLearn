<div class="d-flex row">
  <div class="col-md-2"></div>
  <div class="col-md-8 mb-5">
    <h1>Iniciar Sesión</h1>
    <%= form_with url: login_path, class:"d-flex row", scope: :user do |form| %>
      <div class="my-3 col-md-12">
          <%= form.label :email, class:"form-label" %>
          <%= form.email_field :email, class:"form-control" %>
      </div>
      <div class="my-3 col-md-12">
        <%= form.label :password, class:"form-label" do %>Contraseña<% end %>
        <%= form.password_field :password, required: true, class:"form-control" %>
      </div>
      <div class="col-md-12">
        <%= link_to "¿Olvidaste tu contraseña?", password_reset_path %>
      </div>
      <div class="col-md-12">
        <%= form.submit "Iniciar Sesión", class:"btn btn-primary mt-5 btn-login" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-2"></div>
</div>