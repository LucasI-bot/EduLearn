<div class="course-header">
    <div class="new-and-title">
        <h1><%= @course.title %></h1>
        <%= link_to "Volver", teacher_courses_path, class: "btn btn-danger btn-add"%>
    </div>
    <br>
    <%= @course.description.html_safe %>
    <br>
    <div class="div-links-courses teacher-course pb-2 pt-3 mt-4">
        <a href="<%= teacher_course_path(@course) %>" class="nav-link<% if show %> active<% end %>">Lecciones</a>
        <a href="<%= teacher_course_students_path(@course)%>" class="nav-link<% if defined?(@students) %> active<% end %>">Alumnos</a>
        <a href="<%= teacher_course_exam_answers_path(@course) %>" class="nav-link<% if defined?(@exam_answers) %> active<% end %>">Evaluaciones</a>
        <a href="<%= teacher_course_inscriptions_path(@course) %>" class="nav-link<% if defined?(@inscriptions) %> active<% end %>">Inscripciones</a>
        <a href="<%= teacher_course_conversations_path(@course)%>" class="nav-link<% if defined?(@conversations) %> active<% end %>">Conversaciones</a>
    </div>
</div>