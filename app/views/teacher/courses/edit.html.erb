<div class= "row">
    <div class= "col-md-1">
    </div>
    <div class= "col-md-10">
        <h2>Editar curso</h2>
        <%= form_with model: @course, url: teacher_course_path(@course)  do |f| %>
            <div class="mb-3">
                <%= f.label "Título", class:"form-label" %>
                <%= f.text_field :title, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label "Descripción", class:"form-label" %>
                <%= f.text_area :description, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label "Descripción detallada", class:"form-label" %>
                <%= f.cktext_area :detailed_description, class:"detailed-description-form" %>
            </div>
            <div class="mb-3">
                <%= f.label :banner_img, class:"form-label" do %>Imagen de banner<% end %>
                <%= f.file_field :banner_img, class:"form-control", onchange: 'previewImage(this)' %>
                <% if @course.banner_img.attached? %>
                    <%= image_tag @course.banner_img.variant(resize: '1000x1000'), id: 'form-image-preview', class: 'banner-img-preview' %>
                <% end %>
            </div>
            <div class="mb-3">
                <%= f.label "Precio", class:"form-label" %>
                <%= f.text_field :price, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label :subjects, class:"form-label" do %>Materias dadas<% end %>
                <%= f.collection_select :subject_ids, Subject.all, :id, :subject, { selected: @course.subject_ids }, { multiple: true, class: 'select2 form-control' } %>
            </div>
            <div class="mb-3">
                <%= f.label :skills, class:"form-label" do %>Habilidades enseñadas<% end %>
                <%= f.collection_select :skill_ids, Skill.all, :id, :skill, { selected: @course.skill_ids }, { multiple: true, class: 'select2 form-control' } %>
            </div>
            <div class="mb-3">
                <%= f.label "Fecha inicio", class:"form-label" %>
                <%= f.date_field :start_date, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label "Fecha final", class:"form-label" %>
                <%= f.date_field :end_date, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label "Fecha inicio de inscripción", class:"form-label" %>
                <%= f.date_field :inscription_start_date, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label "Fecha final de inscripción", class:"form-label" %>
                <%= f.date_field :inscription_end_date, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.check_box :visibility, class: "form-check-input" %>
                <%= f.label "Visible", class:"form-label" %>
            </div>
            <div class="mb-3">
                <%= f.check_box :acceptance_required, class: "form-check-input" %>
                <%= f.label "Requiere de aceptación", class:"form-label" %>
            </div>
            <%= f.submit "Enviar", class: "btn btn-primary" %>
        <% end %>
    </div>
    <div class= "col-md-1">
    </div>
</div>