<div class= "row">
    <div class= "col-md-1">
    </div>
    <div class= "col-md-10">
        <h2>Nueva lección</h2>
        <%= form_with model: @lecture, url: teacher_course_section_lecture_path(@section.course, @section, @lecture)  do |f| %>
            <div class="mb-3">
                <%= f.label "Título", class:"form-label" %>
                <%= f.text_field :title, class:"form-control" %>
            </div>
            <%= f.submit "Enviar", class: "btn btn-primary" %>
        <% end %>
    </div>
    <div class= "col-md-1">
    </div>
</div>