<div class="new-and-title">
    <h1>Mis cursos</h1>
    <%= link_to '<svg class="conversation-back white-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/></svg>'.html_safe, student_root_path, class:"btn btn-danger back-student-index" %>
</div>
<div class="table-filters my-4">
    <%= form_with(url: student_courses_path, method: "get", class:"d-flex row") do |form| %>
        <% if params[:order_by] %>
            <%= form.hidden_field "order_by", value: params[:order_by]%>
            <%= form.hidden_field "order", value: params[:order]%>
        <% end %>
        
        <div class="col-md-4 px-2">
            <%= form.label :title, "Título:" %>
            <%= form.text_field :title, class:"form-control", value: params[:title] %>
        </div>

        <div class="col-md-4 px-2">
            <%= form.label :teacher, "Profesor:" %>
            <%= form.text_field :teacher, class:"form-control", value: params[:teacher] %>
        </div>
        

        <div class="col-md-12 actions my-3">
            <%= form.submit "Filtrar", class: "btn btn-primary" %>
            <%= link_to "Limpiar Filtros", student_courses_path(order: params[:order], order_by: params[:order_by]), class: "btn btn-secondary" %>
        </div>
    <% end %>
</div>
