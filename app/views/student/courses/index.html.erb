    <tbody>
        <%  @courses.each do |course| %>
        <tr>
            <td>
                <%= course.title %>
            </td>
            <td>
            <div class="teacher">
                <%= link_to teacher_path(course.user), class:"a-teacher" do%>
                    <div class="teacher-image circular-card-frame">
                        <% if course.user.picture.attached? %>
                            <%= image_tag course.user.picture.variant(resize: '200x200'), class:"img-framed-card" %>
                        <% else %>
                            <%= image_tag 'Empty profile picture.png', class: 'img-framed-card' %>
                        <% end %>
                    </div>
                <% end %>
                <%= link_to teacher_path(course.user), class:"a-teacher d-flex" do%>
                    <div class="teacher-name">
                        <% if course.user.alias.present? %>
                            <%= course.user.alias %>
                        <% else %>
                            <%= course.user.last_name + ", " + course.user.first_name %>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </td>
            <td>
                <% if current_user.inscriptions.find_by(course_id: course.id).mark > 0 %>
                    <%= current_user.inscriptions.find_by(course_id: course.id).mark %>
                <% else %>
                    NaN
                <% end %>
            </td>
            <td>
                <%= current_user.inscriptions.find_by(course_id: course.id).inscription_date.strftime("%d/%m/%Y") %>
            </td>
