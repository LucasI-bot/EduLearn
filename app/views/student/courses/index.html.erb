<div class="new-and-title">
    <h1>Mis cursos</h1>
</div>
<div class="table-filters">
    <%= form_with(url: student_courses_path, method: "get", class:"d-flex row") do |form| %>
        <% if params[:order_by] %>
            <%= form.hidden_field "order_by", value: params[:order_by]%>
            <%= form.hidden_field "order", value: params[:order]%>
        <% end %>
        
        <div class="col-md-4 px-2">
            <%= form.label :title, "Título:" %>
            <%= form.text_field :title, class:"form-control" %>
        </div>

        <div class="col-md-4 px-2">
            <%= form.label :category_eq, "Categoría:" %>
            <%= form.select :category_eq, options_for_select(["", "Category 1", "Category 2", "Category 3"]),{}, class:"form-select" %>
        </div>
        

        <div class="col-md-12 actions my-3">
            <%= form.submit "Filtrar", class: "btn btn-primary" %>
            <%= link_to "Limpiar Filtros", student_courses_path, class: "btn btn-secondary" %>
        </div>
    <% end %>
</div>
<table class="student-table">
    <thead>
        <tr>
            <th>
                <span class="table-header-text">Título</span>
            </th>
            <th>
                <span class="table-header-text">Nota</span>
            </th>
            <th>
                <span class="table-header-text">Inscripción</span>
            </th>
            <th>
                <span class="table-header-text">Acciones</span>
            </th>
        </tr>
    </thead>
    <tbody>
        <%  current_user.inscriptions.where(approved: true, paid: true).order(inscription_date: :desc).limit(5).map{|a| a.course }.each do |course| %>
        <tr>
            <td>
                <%= course.title %>
            </td>
            <td>
                <% if current_user.inscriptions.find_by(course_id: course.id).mark.present? %>
                    <%= current_user.inscriptions.find_by(course_id: course.id).mark %>
                <% else %>
                    NaN
                <% end %>
            </td>
            <td>
                <%= current_user.inscriptions.find_by(course_id: course.id).inscription_date.strftime("%d/%m/%Y") %>
            </td>
            <td class="d-flex">
                    <%= link_to '<svg class="table-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M288 80c-65.2 0-118.8 29.6-159.9 67.7C89.6 183.5 63 226 49.4 256c13.6 30 40.2 72.5 78.6 108.3C169.2 402.4 222.8 432 288 432s118.8-29.6 159.9-67.7C486.4 328.5 513 286 526.6 256c-13.6-30-40.2-72.5-78.6-108.3C406.8 109.6 353.2 80 288 80zM95.4 112.6C142.5 68.8 207.2 32 288 32s145.5 36.8 192.6 80.6c46.8 43.5 78.1 95.4 93 131.1c3.3 7.9 3.3 16.7 0 24.6c-14.9 35.7-46.2 87.7-93 131.1C433.5 443.2 368.8 480 288 480s-145.5-36.8-192.6-80.6C48.6 356 17.3 304 2.5 268.3c-3.3-7.9-3.3-16.7 0-24.6C17.3 208 48.6 156 95.4 112.6zM288 336c44.2 0 80-35.8 80-80s-35.8-80-80-80c-.7 0-1.3 0-2 0c1.3 5.1 2 10.5 2 16c0 35.3-28.7 64-64 64c-5.5 0-10.9-.7-16-2c0 .7 0 1.3 0 2c0 44.2 35.8 80 80 80zm0-208a128 128 0 1 1 0 256 128 128 0 1 1 0-256z"/></svg>'.html_safe, student_course_path(course), class:"btn btn-secondary mx-2"%>
                    <%= button_to '<svg class="table-delete-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/></svg>'.html_safe, student_course_path(course), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary mx-2" %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>